{
    "manifest_version": 3,
    "name": "CRXJS React Vite Exampleee",
    "version": "1.0.0",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "action": { "default_popup": "index.html" },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["src/content.tsx"]
      }
    ],
    "host_permissions": [
      "http://localhost:8787/*"
    ],
    "web_accessible_resources": [
      {
        "resources": ["icons/*.png", "src/assets/*.svg"],
        "matches": []
      }
    ]
  }